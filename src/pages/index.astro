				</Section>
			)
		} -->

		<!-- TODO: Setup image? -->
		<Section title='Experience'>
			{
				experience.map((exp: any) => (
					<Card
						heading={exp.role}
						subheading={exp.location}
						date={exp.date}
						useIcon
						altText={exp.role}
						imageClass='h-12 w-auto md:-left-8'
					>
						<ul class='ml-4 list-disc text-muted-foreground'>
							{exp.desc
								.split('\n')
								.filter((item: any) => item.trim() !== '')
								?.map((item: any, index: number) => (
									<li class='ml-4 list-disc text-muted-foreground'>{item}</li>
								))}
						</ul>
					</Card>
				))
			}
		</Section>

		<Section title='Education'>
			{
				education.map((exp: any) => (
					<Card
						heading={exp.role}
						subheading={exp.location}
						date={exp.date}
						useIcon
						altText={exp.role}
						imageClass='h-12 w-auto md:-left-8'
					>
						<ul class='ml-4 list-disc text-muted-foreground'>
							{exp.desc
								.split('\n')
								.filter((item: any) => item.trim() !== '')
								?.map((item: any, index: number) => (
									<li class='ml-4 list-disc text-muted-foreground'>{item}</li>
								))}
						</ul>
					</Card>
				))
			}
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				{
					allData
						?.slice(0, 2)
						?.map((portfolioItem: any, index: number) => (
							<ProjectCard
								client:load
								link={portfolioItem?.link}
								heading={portfolioItem?.title}
								subheading={portfolioItem?.short}
								imagePath={portfolioItem?.image}
								altText={portfolioItem?.alt}
								useShortDesc
								index={index}
							/>
						))
				}
			</div>
			<a href='/portfolio' class='md:ml-auto'>
				<button
					class='flex w-[px] items-center justify-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
				>
					<span class='relative flex items-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>
					<p class='text-center font-medium'>See full portfolio</p>
				</button>
			</a>
		</Section>

		<Section title='Skills'>
